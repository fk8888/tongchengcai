<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="207dp"
    android:background="@color/whileColor"
    android:orientation="horizontal"
    android:paddingBottom="14dp"
    android:paddingRight="10dp">

    <LinearLayout
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="95dp"
            android:layout_height="44dp"
            android:gravity="center"
            android:text="001" />

        <ImageView
            android:layout_width="95dp"
            android:layout_height="50dp"
            android:paddingLeft="15dp"
            android:paddingTop="25dp"
            android:scaleType="matrix"
            android:src="@mipmap/icon_close" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:id="@+id/view_football_gone"
                android:layout_width="27dp"
                android:layout_height="match_parent" />

            <include layout="@layout/item_top_vs_zhu_ke" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="27dp"
                android:layout_height="50dp"
                android:background="@drawable/shape_text_bg_blue"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/text_color_blue" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerViewWin"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="27dp"
                android:layout_height="50dp"
                android:background="@drawable/shape_text_bg_red"
                android:gravity="center"
                android:text="平"
                android:textColor="@color/colorAccent" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerViewFlat"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_negative"
                android:layout_width="27dp"
                android:layout_height="50dp"
                android:background="@drawable/shape_text_bg_blue"
                android:gravity="center"
                android:text="负"
                android:textColor="@color/text_color_blue" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerViewNegative"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="50dp"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="bottom"
            android:background="@drawable/shape_gray_text_bg"
            android:gravity="center"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:text="胆"
            android:textSize="13dp" />
    </FrameLayout>
</LinearLayout>
