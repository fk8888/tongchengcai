<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="97dp"
    android:id="@+id/ll_gone_view"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_comment_head_pic"
        android:layout_width="97dp"
        android:layout_height="match_parent"
        android:src="@mipmap/icon_my_head" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_line"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_comment_nick_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="13dp"
            android:layout_toRightOf="@+id/image_head"
            android:text="用户昵称"
            android:textColor="@color/blackColor"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/text_comment_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="最近有4脸红的成绩，状态不错！周二继续有亚冠西亚赛区的比赛，不妨继续精选分析为你送上！文末有比分赠送！"
            android:textColor="@color/blackColor"
            android:textSize="11dp" />
    </LinearLayout>
</LinearLayout>