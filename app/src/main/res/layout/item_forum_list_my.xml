<?xml version="1.0" encoding="utf-8"?>
<com.ninetaildemonfox.zdl.tongcheng_cai.utlis.recyclerview.RecyclerItemView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@color/whileColor">

        <LinearLayout
            android:id="@+id/slide"
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:layout_toRightOf="@+id/layout_left"
            android:background="@color/colorAccent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/other"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/button_red"
                android:drawableTop="@mipmap/icon_award_editor"
                android:gravity="center"
                android:text="编辑"
                android:textColor="@color/whileColor" />

            <TextView
                android:id="@+id/delete"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/button_red"
                android:drawableTop="@mipmap/icon_award_del"
                android:gravity="center"
                android:text="删除"
                android:textColor="@color/whileColor" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_left"
            android:layout_width="414dp"
            android:layout_height="match_parent"
            android:background="@drawable/content_white"
            android:orientation="vertical">

            <include layout="@layout/item_forum_list_adp" />
        </LinearLayout>

    </RelativeLayout>

</com.ninetaildemonfox.zdl.tongcheng_cai.utlis.recyclerview.RecyclerItemView>