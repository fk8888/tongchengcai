<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="257dp"
    android:background="@color/whileColor"
    android:orientation="horizontal"
    android:paddingRight="10dp">

    <LinearLayout
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="95dp"
            android:layout_height="44dp"
            android:gravity="center"
            android:text="001" />

        <ImageView
            android:layout_width="95dp"
            android:layout_height="50dp"
            android:paddingLeft="15dp"
            android:paddingTop="25dp"
            android:scaleType="matrix"
            android:src="@mipmap/icon_close" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:id="@+id/view_football_gone"
                android:layout_width="27dp"
                android:layout_height="match_parent" />

            <include layout="@layout/item_top_vs_zhu_ke" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="27dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_text_bg_blue"
                    android:gravity="center"
                    android:text="课胜"
                    android:textColor="@color/text_color_blue" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerViewUp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_football_left_red"
                    android:layout_width="27dp"
                    android:layout_height="100dp"
                    android:background="@drawable/shape_text_bg_blue"
                    android:gravity="center"
                    android:text="主胜"
                    android:textColor="@color/text_color_blue" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerViewDow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="1dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="13dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="bottom"
            android:background="@drawable/shape_gray_text_bg"
            android:gravity="center"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:text="胆"
            android:textSize="13dp" />
    </FrameLayout>
</LinearLayout>
