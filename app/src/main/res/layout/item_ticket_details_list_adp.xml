<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    android:background="@color/whileColor"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">


        <android.support.v7.widget.RecyclerView
            android:id="@+id/reyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/wait_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="投注信息：2串1 1注50倍" />

        <TextView
            android:id="@+id/wait_tmoney"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="投注金额：￥0.00" />

        <TextView
            android:id="@+id/wait_getmoney"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="中奖金额：￥0.00" />

    </LinearLayout>

    <TextView
        android:id="@+id/wait_num"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_gravity="right"
        android:layout_margin="20dp"
        android:background="@color/text_gray_color"
        android:gravity="center"
        android:text="1"
        android:textSize="11dp" />

</FrameLayout>