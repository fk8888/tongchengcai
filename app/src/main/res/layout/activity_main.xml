<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ninetaildemonfox.zdl.tongcheng_cai.MainActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/common_line" />

    <RadioGroup
        android:id="@+id/main_rgp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/whileColor"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="3dp">

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/menu_mine_selector"
            android:gravity="center"
            android:text="首页"
            android:textColor="@drawable/menu_color_selector"
            android:textSize="14sp" />

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/menu_award_selector"
            android:gravity="center"
            android:text="购彩"
            android:textColor="@drawable/menu_color_selector"
            android:textSize="14sp" />


        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/menu_shop_selector"
            android:gravity="center"
            android:text="商场"
            android:textColor="@drawable/menu_color_selector"
            android:textSize="14sp" />

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/menu_recommend_selector"
            android:gravity="center"
            android:text="推荐"
            android:textColor="@drawable/menu_color_selector"
            android:textSize="14sp" />

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/menu_my_selector"
            android:gravity="center"
            android:text="我的"
            android:textColor="@drawable/menu_color_selector"
            android:textSize="14sp" />
    </RadioGroup>

</LinearLayout>
