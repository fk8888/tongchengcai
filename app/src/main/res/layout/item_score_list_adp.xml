<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingRight="10dp">

    <LinearLayout
        android:id="@+id/ll_gone_one"
        android:layout_width="match_parent"
        android:layout_height="207dp"
        android:orientation="horizontal"
        android:paddingBottom="5dp">

        <LinearLayout
            android:layout_width="95dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_end_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="\n德国杯\n001\n21:55截止"
                android:textColor="@color/text_gray_666666"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/text_analysis_onclick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawablePadding="5dp"
                android:drawableRight="@mipmap/icon_analysis_down_ash"
                android:paddingTop="20dp"
                android:text="分析"
                android:textColor="@color/colorAccent"
                android:textSize="11dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:id="@+id/view_football_gone"
                    android:layout_width="27dp"
                    android:layout_height="match_parent" />

                <include layout="@layout/item_top_vs_zhu_ke" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_flag_win"
                    android:layout_width="27dp"
                    android:layout_height="50dp"
                    android:background="@drawable/shape_text_bg_red"
                    android:gravity="center"
                    tools:text="胜"
                    android:textColor="@color/text_football" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerViewWin"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_flag_ping"
                    android:layout_width="27dp"
                    android:layout_height="50dp"
                    android:background="@drawable/shape_text_bg_blue"
                    android:gravity="center"
                    tools:text="平"
                    android:textColor="@color/text_color_blue" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerViewFlat"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_flag_fu"
                    android:layout_width="27dp"
                    android:layout_height="50dp"
                    android:background="@drawable/shape_text_bg_green"
                    android:gravity="center"
                    tools:text="负"
                    android:textColor="@color/text_football" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerViewNegative"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="44dp">

            <TextView
                android:id="@+id/text_expand_all"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/shape_gray_text_bg"
                android:gravity="center"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:text="展开全部"
                android:textSize="13dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_analysis_gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="#ff333333"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:gravity="center"
                android:text="历史交锋"
                android:textColor="@color/whileColor"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/text_victory_flat_lose"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:gravity="center"
                android:text="胜1平1负5"
                android:textColor="@color/colorAccent"
                android:textSize="13dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginTop="1dp"
            android:background="#ff333333"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:gravity="center"
                android:text="历史战绩"
                android:textColor="@color/whileColor"
                android:textSize="13dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:gravity="center"
                android:text="主队"
                android:textColor="@color/whileColor"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/texthVictoryFlatLose"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:gravity="center"
                android:text="胜1平1负5"
                android:textColor="@color/colorAccent"
                android:textSize="13dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:gravity="center"
                android:text="|   客队"
                android:textColor="@color/whileColor"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/textgVictoryFlatLose"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:gravity="center"
                android:text="胜1平1负5"
                android:textColor="@color/colorAccent"
                android:textSize="13dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textAvgVictoryFlatLose"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginTop="1dp"
            android:background="#ff333333"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:text="平均赔率      2.35      2.84      3.31"
            android:textColor="@color/whileColor"
            android:textSize="13dp" />

    </LinearLayout>
</LinearLayout>