<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ninetaildemonfox.zdl.tongcheng_cai.fgt.MyFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/title_layout_top" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="156dp"
            android:background="@color/colorAccent">

            <ImageView
                android:id="@+id/image_head"
                android:layout_width="73dp"
                android:layout_height="73dp"
                android:layout_margin="13dp"
                android:src="@mipmap/icon_my_headmoren" />


            <TextView
                android:id="@+id/text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_toRightOf="@+id/image_head"
                android:text="九尾妖狐"
                android:textSize="17dp"
                android:textColor="@color/whileColor" />

            <LinearLayout
                android:id="@+id/ll_give_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_name"
                android:layout_toRightOf="@+id/image_head"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_give_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="552"
                    android:textColor="@color/whileColor"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="点赞"
                    android:textColor="@color/whileColor"
                    android:textSize="15dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_name"
                android:layout_toRightOf="@+id/ll_give_count"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_forum_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:text="552"
                    android:textColor="@color/whileColor"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/text_forum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="论坛"
                    android:textColor="@color/whileColor"
                    android:textSize="15dp" />

            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:background="@color/whileColor"
            android:padding="10dp"
            android:paddingLeft="13dp"
            android:text="订单中心"
            android:textColor="@color/blackColor"
            android:textSize="15dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/whileColor"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/text_lottery_order"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@mipmap/icon_caipiao_order"
                android:gravity="center"
                android:text="彩票订单"
                android:textColor="@color/blackColor"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/text_documentary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@mipmap/icon_gendan_order"
                android:gravity="center"
                android:text="跟单订单"
                android:textColor="@color/blackColor"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/text_shop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@mipmap/icon_shangcheng_order"
                android:gravity="center"
                android:text="商城订单"
                android:textColor="@color/blackColor"
                android:textSize="15dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/text_my_address"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@color/whileColor"
            android:drawableLeft="@mipmap/icon_my_ardess"
            android:drawablePadding="13dp"
            android:drawableRight="@mipmap/icon_down"
            android:gravity="center_vertical"
            android:paddingLeft="11dp"
            android:paddingRight="15dp"
            android:text="收货地址"
            android:textColor="@color/blackColor" />

        <TextView
            android:id="@+id/my_code"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:background="@color/whileColor"
            android:drawableLeft="@mipmap/icon_my_integration"
            android:drawablePadding="13dp"
            android:drawableRight="@mipmap/icon_down"
            android:gravity="center_vertical"
            android:paddingLeft="11dp"
            android:paddingRight="15dp"
            android:text="我的积分"
            android:textColor="@color/blackColor" />

        <TextView
            android:id="@+id/my_dimensional"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@color/whileColor"
            android:drawableLeft="@mipmap/icon_my_code"
            android:drawablePadding="13dp"
            android:drawableRight="@mipmap/icon_down"
            android:gravity="center_vertical"
            android:paddingLeft="11dp"
            android:paddingRight="15dp"
            android:text="我的推广码"
            android:textColor="@color/blackColor" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_my_wallet"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="180dp"
        android:background="@mipmap/icon_money_rectangle"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                android:text="账户余额"
                android:textColor="@color/blackColor"
                android:textSize="13dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                android:text="可提现金额"
                android:textColor="@color/blackColor"
                android:textSize="13dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_recharge_money"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                tools:text="￥360.00"
                android:textColor="@color/blackColor"
                android:textSize="23dp" />

            <TextView
                android:id="@+id/text_withdraw_money"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                tools:text="￥360.00"
                android:textColor="@color/blackColor"
                android:textSize="23dp" />

        </LinearLayout>
    </LinearLayout>
</FrameLayout>
