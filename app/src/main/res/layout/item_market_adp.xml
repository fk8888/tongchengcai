<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="187dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="13dp"
    android:layout_marginTop="13dp"
    android:background="@color/whileColor"
    android:orientation="vertical"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/image_head"
        android:layout_width="match_parent"
        android:layout_height="187dp"
        android:src="@mipmap/icon_mall_commodity" />

    <TextView
        android:id="@+id/text_context"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:paddingLeft="10dp"
        android:singleLine="true"
        android:text="商品名称商品名称商品名..." />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/text_integral_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/icon_mall_integration"
            android:drawablePadding="10dp"
            android:text="200"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/text_exchange_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="兑换量：1.5万"
            android:textColor="@color/text_gray_666666"
            android:textSize="10dp" />

    </LinearLayout>

</LinearLayout>