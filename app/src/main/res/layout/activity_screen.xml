<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ninetaildemonfox.zdl.tongcheng_cai.aty.ScreenActivity">

    <include layout="@layout/title_layout_top" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/whileColor"
        android:padding="10dp"
        android:text="赔率区间选择"
        android:textColor="@color/text_gray_666666"
        android:textSize="15dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/reyclerViewUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/whileColor"
        android:padding="10dp"
        android:text="赛事选择"
        android:textColor="@color/text_gray_666666"
        android:textSize="15dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/reyclerViewDown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <include layout="@layout/bottom_sure_cancel" />


</LinearLayout>
