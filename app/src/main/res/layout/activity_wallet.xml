<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ninetaildemonfox.zdl.tongcheng_cai.aty.WalletActivity">

    <include layout="@layout/title_layout_top" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@color/colorAccent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="127dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="27dp"
            android:background="@mipmap/icon_money_rectangle"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="账户余额"
                    android:textColor="@color/blackColor"
                    android:textSize="13dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="可提现金额"
                    android:textColor="@color/blackColor"
                    android:textSize="13dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textRechargeMoney"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/blackColor"
                    android:textSize="30dp"
                    tools:text="￥360.00" />

                <TextView
                    android:id="@+id/textWithdrawMoney"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/blackColor"
                    android:textSize="30dp"
                    tools:text="￥1280" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_stored_value"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="账户储值 >"
                    android:textColor="@color/colorAccent"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/text_clear_value"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="余额清账 >"
                    android:textColor="@color/colorAccent"
                    android:textSize="10dp" />


            </LinearLayout>

        </LinearLayout>


    </FrameLayout>

    <TextView
        android:id="@+id/text_ledger_details"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="10dp"
        android:background="@color/whileColor"
        android:drawableLeft="@mipmap/icon_money_details"
        android:drawablePadding="13dp"
        android:drawableRight="@mipmap/icon_down"
        android:gravity="center_vertical"
        android:paddingLeft="11dp"
        android:paddingRight="15dp"
        android:text="账本明细"
        android:textColor="@color/blackColor" />

    <TextView
        android:id="@+id/text_details_of_withdrawal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="10dp"
        android:background="@color/whileColor"
        android:drawableLeft="@mipmap/icon_maney_cash"
        android:drawablePadding="13dp"
        android:drawableRight="@mipmap/icon_down"
        android:gravity="center_vertical"
        android:paddingLeft="11dp"
        android:paddingRight="15dp"
        android:text="提现明细"
        android:textColor="@color/blackColor" />

    <TextView
        android:id="@+id/text_authentication"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="10dp"
        android:background="@color/whileColor"
        android:drawableLeft="@mipmap/icon_money_bank"
        android:drawablePadding="13dp"
        android:drawableRight="@mipmap/icon_down"
        android:gravity="center_vertical"
        android:paddingLeft="11dp"
        android:paddingRight="15dp"
        android:text="银行卡管理"
        android:textColor="@color/blackColor" />

    <TextView
        android:id="@+id/text_renzheng"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="10dp"
        android:background="@color/whileColor"
        android:drawableLeft="@mipmap/icon_money_bank"
        android:drawablePadding="13dp"
        android:drawableRight="@mipmap/icon_down"
        android:gravity="center_vertical"
        android:paddingLeft="11dp"
        android:paddingRight="15dp"
        android:text="认证先放在这里"
        android:textColor="@color/blackColor"
        android:visibility="gone" />

</LinearLayout>
