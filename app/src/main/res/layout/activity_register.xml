<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.ninetaildemonfox.zdl.tongcheng_cai.aty.RegisterActivity">

    <ImageView
        android:id="@+id/image_left_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:src="@mipmap/icon_return" />

    <TextView
        android:id="@+id/text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="注册"
        android:textColor="@color/blackColor"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/edit_invitation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="51dp"
        android:layout_marginRight="51dp"
        android:layout_marginTop="50dp"
        android:drawablePadding="17dp"
        android:hint="请输入邀请码"
        android:text="823916"
        android:maxLength="11"
        android:paddingBottom="30dp"
        android:singleLine="true"
        android:textSize="17dp" />

    <EditText
        android:id="@+id/edit_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="51dp"
        android:layout_marginRight="51dp"
        android:layout_marginTop="10dp"
        android:hint="请输入手机号码"
        android:inputType="phone|number"
        android:maxLength="11"
        android:paddingBottom="30dp"
        android:singleLine="true"
        android:textSize="17dp" />


    <FrameLayout
        android:id="@+id/fl_verification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="51dp"
        android:layout_marginRight="51dp">

        <EditText
            android:id="@+id/edit_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="17dp"
            android:hint="请输入验证码"
            android:inputType="phone|number"
            android:maxLength="11"
            android:paddingBottom="30dp"
            android:singleLine="true"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/text_verification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="获取验证码"
            android:textColor="@color/colorAccent"
            android:textSize="17dp" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_psd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="51dp"
        android:layout_marginRight="51dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edit_psd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="17dp"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:paddingBottom="30dp"
            android:singleLine="true"
            android:textSize="17dp" />

        <ImageView
            android:id="@+id/iamge_eye"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/drawable_close_open" />
    </FrameLayout>

    <TextView
        android:id="@+id/text_login"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginLeft="51dp"
        android:layout_marginRight="51dp"
        android:layout_marginTop="31dp"
        android:background="@drawable/shape_drawable_login"
        android:gravity="center"
        android:text="立即注册"
        android:textColor="@color/whileColor"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/text_gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="51dp"
        android:layout_marginRight="51dp"
        android:layout_marginTop="10dp"
        android:text="未注册手机验证后自动注册，注册即代表你已阅"
        android:textSize="13dp" />

    <LinearLayout
        android:id="@+id/ll_gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="51dp"
        android:layout_marginRight="51dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="读并同意"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/text_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《同城彩协议》"
            android:textColor="@color/colorAccent"
            android:textSize="13dp" />


    </LinearLayout>

</LinearLayout>